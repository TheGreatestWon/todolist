{
  "name": "todolist-project",
  "version": "1.0.0",
  "description": "Todo List Application with React frontend and Node.js/Express backend",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently --kill-others-on-fail \"npm run start:frontend\" \"npm run start:backend\"",
    "test": "cd backend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report test/e2e/report"
  },
  "keywords": [
    "todo",
    "react",
    "node",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^8.2.0",
    "playwright": "^1.58.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
