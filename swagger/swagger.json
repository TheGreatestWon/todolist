{
  "openapi": "3.0.3",
  "info": {
    "title": "Personal Todo Management System API",
    "description": "개인 할 일 관리 시스템 REST API 명세서. JWT 기반 인증을 사용하며, 사용자는 자신의 할 일만 관리할 수 있습니다.",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@todolist.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://todolist-api.vercel.app",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "사용자 인증 관련 API"
    },
    {
      "name": "Todos",
      "description": "할 일 관리 API (인증 필요)"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "회원가입",
        "description": "새로운 사용자 계정을 생성합니다. 이메일은 유일해야 하며, 비밀번호는 최소 8자 이상이어야 합니다.",
        "operationId": "register",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              },
              "examples": {
                "example1": {
                  "summary": "회원가입 예시",
                  "value": {
                    "email": "user@example.com",
                    "password": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User registered successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "이메일 중복 또는 잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "emailExists": {
                    "summary": "이메일 중복",
                    "value": {
                      "error": "Email already exists"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "유효성 검증 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidEmail": {
                    "summary": "잘못된 이메일 형식",
                    "value": {
                      "error": "Invalid email format"
                    }
                  },
                  "shortPassword": {
                    "summary": "비밀번호 길이 부족",
                    "value": {
                      "error": "Password must be at least 8 characters"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "로그인",
        "description": "이메일과 비밀번호로 로그인하여 JWT 토큰을 발급받습니다.",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              },
              "examples": {
                "example1": {
                  "summary": "로그인 예시",
                  "value": {
                    "email": "user@example.com",
                    "password": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                },
                "examples": {
                  "example1": {
                    "summary": "로그인 성공 응답",
                    "value": {
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOjEsImVtYWlsIjoidXNlckBleGFtcGxlLmNvbSIsImlhdCI6MTcwOTI4MDAwMCwiZXhwIjoxNzA5MzY2NDAwfQ.xxx",
                      "user": {
                        "id": 1,
                        "email": "user@example.com",
                        "created_at": "2026-02-11T10:00:00Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 실패 (이메일 또는 비밀번호 불일치)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidCredentials": {
                    "summary": "잘못된 자격증명",
                    "value": {
                      "error": "Invalid email or password"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/todos": {
      "get": {
        "tags": ["Todos"],
        "summary": "할 일 목록 조회",
        "description": "로그인한 사용자의 할 일 목록을 조회합니다. 필터링 옵션을 사용하여 상태별, 마감일별로 조회할 수 있습니다.",
        "operationId": "getTodos",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "할 일 상태 필터 (all, active, completed)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "active", "completed"],
              "default": "all"
            }
          },
          {
            "name": "due_date",
            "in": "query",
            "description": "마감일 필터 (today, week, overdue)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["today", "week", "overdue"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "할 일 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TodoListResponse"
                },
                "examples": {
                  "example1": {
                    "summary": "할 일 목록 응답",
                    "value": {
                      "todos": [
                        {
                          "id": 1,
                          "user_id": 1,
                          "title": "프로젝트 기획서 작성",
                          "description": "PRD 문서 작성 및 검토",
                          "due_date": "2026-02-15",
                          "is_completed": false,
                          "created_at": "2026-02-11T10:00:00Z",
                          "updated_at": "2026-02-11T10:00:00Z"
                        },
                        {
                          "id": 2,
                          "user_id": 1,
                          "title": "회의 준비",
                          "description": null,
                          "due_date": null,
                          "is_completed": true,
                          "created_at": "2026-02-10T09:00:00Z",
                          "updated_at": "2026-02-11T11:30:00Z"
                        }
                      ],
                      "total": 2
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요 (토큰 없음 또는 유효하지 않음)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "noToken": {
                    "summary": "토큰 없음",
                    "value": {
                      "error": "Authentication required"
                    }
                  },
                  "invalidToken": {
                    "summary": "유효하지 않은 토큰",
                    "value": {
                      "error": "Invalid token"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Todos"],
        "summary": "할 일 생성",
        "description": "새로운 할 일을 생성합니다. 제목은 필수이며, 설명과 마감일은 선택 사항입니다.",
        "operationId": "createTodo",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTodoRequest"
              },
              "examples": {
                "withAllFields": {
                  "summary": "모든 필드 포함",
                  "value": {
                    "title": "새로운 할 일",
                    "description": "상세 설명",
                    "due_date": "2026-02-20"
                  }
                },
                "onlyTitle": {
                  "summary": "제목만 포함",
                  "value": {
                    "title": "간단한 할 일"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "할 일 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "todo": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                },
                "examples": {
                  "example1": {
                    "summary": "생성된 할 일",
                    "value": {
                      "todo": {
                        "id": 3,
                        "user_id": 1,
                        "title": "새로운 할 일",
                        "description": "상세 설명",
                        "due_date": "2026-02-20",
                        "is_completed": false,
                        "created_at": "2026-02-11T12:00:00Z",
                        "updated_at": "2026-02-11T12:00:00Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (제목 누락)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "missingTitle": {
                    "summary": "제목 누락",
                    "value": {
                      "error": "Title is required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/todos/{id}": {
      "put": {
        "tags": ["Todos"],
        "summary": "할 일 수정",
        "description": "기존 할 일을 수정합니다. 자신의 할 일만 수정할 수 있으며, 모든 필드는 선택 사항입니다.",
        "operationId": "updateTodo",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "할 일 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTodoRequest"
              },
              "examples": {
                "updateTitle": {
                  "summary": "제목만 수정",
                  "value": {
                    "title": "수정된 제목"
                  }
                },
                "completeTask": {
                  "summary": "완료 처리",
                  "value": {
                    "is_completed": true
                  }
                },
                "updateAll": {
                  "summary": "모든 필드 수정",
                  "value": {
                    "title": "수정된 제목",
                    "description": "수정된 설명",
                    "due_date": "2026-02-25",
                    "is_completed": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "할 일 수정 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "todo": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                },
                "examples": {
                  "example1": {
                    "summary": "수정된 할 일",
                    "value": {
                      "todo": {
                        "id": 1,
                        "user_id": 1,
                        "title": "수정된 제목",
                        "description": "수정된 설명",
                        "due_date": "2026-02-25",
                        "is_completed": true,
                        "created_at": "2026-02-11T10:00:00Z",
                        "updated_at": "2026-02-11T13:00:00Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "권한 없음 (다른 사용자의 할 일)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "accessDenied": {
                    "summary": "접근 거부",
                    "value": {
                      "error": "Access denied"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "할 일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "notFound": {
                    "summary": "할 일 없음",
                    "value": {
                      "error": "Todo not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Todos"],
        "summary": "할 일 삭제",
        "description": "할 일을 영구적으로 삭제합니다. 자신의 할 일만 삭제할 수 있으며, 삭제 후 복구할 수 없습니다.",
        "operationId": "deleteTodo",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "할 일 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "할 일 삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Todo deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "권한 없음 (다른 사용자의 할 일)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "accessDenied": {
                    "summary": "접근 거부",
                    "value": {
                      "error": "Access denied"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "할 일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "notFound": {
                    "summary": "할 일 없음",
                    "value": {
                      "error": "Todo not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT 인증 토큰. 로그인 시 발급받은 토큰을 Authorization 헤더에 'Bearer {token}' 형식으로 포함해야 합니다."
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "description": "사용자 정보 (비밀번호 제외)",
        "required": ["id", "email", "created_at", "updated_at"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "사용자 고유 ID (자동 증가)",
            "example": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "사용자 이메일 주소 (로그인 ID)",
            "example": "user@example.com"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "계정 생성 시각 (ISO 8601)",
            "example": "2026-02-11T10:00:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "계정 수정 시각 (ISO 8601)",
            "example": "2026-02-11T10:00:00Z"
          }
        }
      },
      "Todo": {
        "type": "object",
        "description": "할 일 정보",
        "required": ["id", "user_id", "title", "is_completed", "created_at", "updated_at"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "할 일 고유 ID (자동 증가)",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "description": "소유자 사용자 ID",
            "example": 1
          },
          "title": {
            "type": "string",
            "maxLength": 200,
            "description": "할 일 제목 (최대 200자)",
            "example": "프로젝트 기획서 작성"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "할 일 상세 설명 (선택, 최대 1000자)",
            "example": "PRD 문서 작성 및 검토"
          },
          "due_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "마감일 (선택, YYYY-MM-DD 형식)",
            "example": "2026-02-15"
          },
          "is_completed": {
            "type": "boolean",
            "description": "완료 여부 (기본값: false)",
            "example": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "생성 시각 (ISO 8601)",
            "example": "2026-02-11T10:00:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "수정 시각 (ISO 8601)",
            "example": "2026-02-11T10:00:00Z"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "description": "회원가입 요청",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "이메일 주소 (유일해야 함)",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 8,
            "description": "비밀번호 (최소 8자 이상)",
            "example": "password123"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "description": "로그인 요청",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "등록된 이메일 주소",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "비밀번호",
            "example": "password123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "description": "로그인 성공 응답",
        "required": ["token", "user"],
        "properties": {
          "token": {
            "type": "string",
            "description": "JWT 인증 토큰 (Bearer 토큰으로 사용)",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOjEsImVtYWlsIjoidXNlckBleGFtcGxlLmNvbSIsImlhdCI6MTcwOTI4MDAwMCwiZXhwIjoxNzA5MzY2NDAwfQ.xxx"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "CreateTodoRequest": {
        "type": "object",
        "description": "할 일 생성 요청",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 200,
            "description": "할 일 제목 (필수, 최대 200자)",
            "example": "새로운 할 일"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "할 일 상세 설명 (선택, 최대 1000자)",
            "example": "상세 설명"
          },
          "due_date": {
            "type": "string",
            "format": "date",
            "description": "마감일 (선택, YYYY-MM-DD 형식)",
            "example": "2026-02-20"
          }
        }
      },
      "UpdateTodoRequest": {
        "type": "object",
        "description": "할 일 수정 요청 (모든 필드 선택적)",
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 200,
            "description": "할 일 제목 (최대 200자)",
            "example": "수정된 제목"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "할 일 상세 설명 (최대 1000자, null 가능)",
            "example": "수정된 설명"
          },
          "due_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "마감일 (YYYY-MM-DD 형식, null 가능)",
            "example": "2026-02-25"
          },
          "is_completed": {
            "type": "boolean",
            "description": "완료 여부",
            "example": true
          }
        }
      },
      "TodoListResponse": {
        "type": "object",
        "description": "할 일 목록 응답",
        "required": ["todos", "total"],
        "properties": {
          "todos": {
            "type": "array",
            "description": "할 일 배열",
            "items": {
              "$ref": "#/components/schemas/Todo"
            }
          },
          "total": {
            "type": "integer",
            "description": "전체 할 일 개수",
            "example": 2
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "에러 응답 (일관된 형식)",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "에러 메시지",
            "example": "Invalid email or password"
          }
        }
      }
    }
  }
}
